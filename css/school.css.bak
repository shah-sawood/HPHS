.name {
    text-align: center;
    background-color: none;
	font-family: Arial black;
    padding-bottom: 0px;
	margin: 0px;
	margin-bottom: 2px;
	font-size: 35px;
}
.name:hover{
	
}
.name_mark {
	border-radius: 20px;
	padding-left: 5px;
	padding-right: 5px;
	background-color: orange;
	letter-spacing: 1px;
	width: 1247px;
}
.batch{
    background-color: darkgreen;
	padding: 0px;
	margin: 0px;
	font-size: 33px;
    text-align: center;
    color: whitesmoke;
	font-weight: bold;
}
.batch:hover {
	background-color: red;
}

div img {
    height: fixed;
    width: 290px;
}

img:hover {
    transition-duration: 5s;
    border-radius: 1500px;
}

.gallary{
    background-color: orange;
    height: 630px;
    width: 300px;
    overflow: auto;
    float: right;
    margin-left: 0px;
    padding-left: 0px;
}
ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background-color: black;
}

li {
	font-size: 20px;
	font-family: arial;
	font-weight: bold;
	float: left;
	display: block;
	color: white;
	text-align: center;
	padding: 16px;
	text-decoration: none;
	
	margin: 0px;
}

li:hover {
	background-color: rgb(150, 150, 150)
}
li:active {
	background-color: green;
}